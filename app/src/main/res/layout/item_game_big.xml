<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="2dp"
    android:background="@drawable/shape_card_16dp"
    android:clipToOutline="true">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="center"
        app:layout_constraintDimensionRatio="w,16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView_gameIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:clipToOutline="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:shapeAppearanceOverlay="@style/Theme.GameStore.RoundedImageView"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textView_gameName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_gameIcon"
            app:layout_constraintEnd_toStartOf="@+id/imageView_ageRating"
            app:layout_constraintStart_toEndOf="@+id/imageView_gameIcon"
            app:layout_constraintTop_toTopOf="@+id/imageView_gameIcon"
            tools:text="Raid Shadow: Legends" />

        <Button
            android:id="@+id/button_installGame"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:background="#000000"
            android:backgroundTint="@color/white_alpha100"
            android:foreground="@drawable/shape_rounded_16dp"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="@string/button_Install"
            android:textAllCaps="false"
            android:textColor="@color/white"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_savedGame"
            app:layout_constraintStart_toStartOf="@+id/imageView_gameIcon"
            app:layout_constraintTop_toBottomOf="@+id/imageView_gameIcon"
            tools:text="1.273.000 Ä‘" />

        <ImageView
            android:id="@+id/imageView_ageRating"
            android:layout_width="40dp"
            android:layout_height="48dp"
            android:layout_marginEnd="16dp"
            android:scaleType="fitXY"
            android:tintMode="src_in"
            app:layout_constraintBottom_toBottomOf="@+id/imageView_gameIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/imageView_gameIcon"
            app:srcCompat="@drawable/iarc_3" />

        <ImageButton
            android:id="@+id/button_savedGame"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/white_alpha100"
            android:foreground="@drawable/shape_game_icon"
            app:layout_constraintBottom_toBottomOf="@+id/button_installGame"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/button_installGame"
            app:srcCompat="@drawable/ic_bookmark_24dp"
            app:tint="@color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>